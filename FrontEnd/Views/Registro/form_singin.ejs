<div class="container">
	<div class="wrapper">
		<div class="item-form">
			<h1 class="text-center">Registrarse</h1>
			<form action="/registrar" method="post" class="form-group">
				<div class="form-group">
					<input type="text" id="name" name="name" placeholder="Nombre:" class="form-control" required>
				</div>
				<div class="form-group">
					<input type="text" id="last_name" name="last_name" placeholder="Apellidos:" class="form-control" required>
				</div>
				<div class="form-group">
					<input type="email" id="email" name="email" placeholder="Correo:" class="form-control" required>
				</div>
				<div class="form-group">
					<input type="password" id="password" name="password" placeholder="Contraseña" class="form-control" required>
				</div>
				<div class="form-group">
					<div class="container padding-none">
						<div class="row margin-none">
							<button type="submit" class="btn btn-primary col-md-3">Registrar</button>
							<a href="/" class="btn btn-success offset-md-6 col-md-3">Iniciar Sesión</a>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>